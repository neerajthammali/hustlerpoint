
{
  "entities": {
    "Comment": {
      "title": "Comment",
      "type": "object",
      "description": "Represents a user comment on an article.",
      "properties": {
        "text": {
          "type": "string",
          "description": "The text content of the comment."
        },
        "authorId": {
          "type": "string",
          "description": "The UID of the user who wrote the comment."
        },
        "authorName": {
          "type": "string",
          "description": "The display name of the user who wrote the comment."
        },
        "createdAt": {
          "type": "string",
          "description": "The date and time when the comment was created.",
          "format": "date-time"
        }
      },
      "required": [
        "text",
        "authorId",
        "authorName",
        "createdAt"
      ]
    },
    "Article": {
      "title": "Article",
      "type": "object",
      "description": "Represents a blog article.",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the article."
        },
        "content": {
          "type": "string",
          "description": "The full content of the article in markdown format."
        },
        "author": {
          "type": "string",
          "description": "Author of the article."
        },
        "category": {
          "type": "string",
          "description": "The category of the article."
        },
        "slug": {
          "type": "string",
          "description": "URL-friendly slug for the article."
        },
        "keywords": {
          "type": "string",
          "description": "Comma-separated keywords for SEO."
        },
        "metaDescription": {
          "type": "string",
          "description": "Meta description for SEO."
        },
        "canonicalUrl": {
          "type": "string",
          "description": "Canonical URL if the content is republished."
        },
        "publishedDate": {
          "type": "string",
          "format": "date-time",
          "description": "The date the article was published."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the article was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the article was last updated."
        },
        "status": {
          "type": "string",
          "enum": [
            "draft",
            "published",
            "scheduled"
          ],
          "description": "The publishing status of the article."
        },
        "featured": {
          "type": "boolean",
          "description": "Whether the article is a featured post."
        },
        "imageId": {
          "type": "string",
          "description": "ID for the placeholder image."
        },
        "engagement": {
          "type": "number",
          "description": "Metric for user engagement."
        },
        "excerpt": {
          "type": "string",
          "description": "A short summary of the article."
        }
      },
      "required": [
        "title",
        "content",
        "slug",
        "author",
        "category",
        "status",
        "publishedDate",
        "createdAt",
        "updatedAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "anonymous"
    ]
  },
  "firestore": {
    "/articles/{articleId}": {
      "schema": {
        "$ref": "#/entities/Article"
      },
      "description": "Stores all blog articles. Each document is an article."
    },
    "/articles/{articleId}/comments/{commentId}": {
      "schema": {
        "$ref": "#/entities/Comment"
      },
      "description": "Stores comments for a specific article."
    }
  }
}
