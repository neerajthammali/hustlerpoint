{
  "entities": {
    "Article": {
      "title": "Article",
      "type": "object",
      "description": "Represents a blog article.",
      "properties": {
        "title": {
          "type": "string",
          "description": "Title of the article."
        },
        "content": {
          "type": "object",
          "description": "The full content of the article in Editor.js format."
        },
        "author": {
          "type": "string",
          "description": "Author of the article."
        },
        "category": {
          "type": "string",
          "description": "The category of the article."
        },
        "slug": {
          "type": "string",
          "description": "URL-friendly slug for the article."
        },
        "keywords": {
          "type": "string",
          "description": "Comma-separated keywords for SEO."
        },
        "metaDescription": {
          "type": "string",
          "description": "Meta description for SEO."
        },
        "canonicalUrl": {
          "type": "string",
          "description": "Canonical URL if the content is republished."
        },
        "publishedDate": {
          "type": "string",
          "format": "date-time",
          "description": "The date the article was published."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the article was created."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp of when the article was last updated."
        },
        "status": {
          "type": "string",
          "enum": ["draft", "published", "scheduled"],
          "description": "The publishing status of the article."
        },
        "featured": {
          "type": "boolean",
          "description": "Whether the article is a featured post."
        },
        "imageId": {
          "type": "string",
          "description": "ID for the placeholder image."
        },
        "engagement": {
            "type": "number",
            "description": "Metric for user engagement."
        },
        "excerpt": {
            "type": "string",
            "description": "A short summary of the article."
        }
      },
      "required": [
        "title",
        "content",
        "slug",
        "author",
        "category",
        "status",
        "publishedDate",
        "createdAt",
        "updatedAt"
      ]
    },
    "Category": {
      "title": "Category",
      "type": "object",
      "description": "Represents a category for articles.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the category."
        },
        "description": {
          "type": "string",
          "description": "Description of the category."
        }
      },
      "required": [
        "name"
      ]
    },
    "NewsletterSubscriber": {
      "title": "NewsletterSubscriber",
      "type": "object",
      "description": "Represents a newsletter subscriber.",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address of the subscriber."
        },
        "subscriptionDate": {
          "type": "string",
          "format": "date-time",
          "description": "Date and time the user subscribed."
        }
      },
      "required": [
        "email",
        "subscriptionDate"
      ]
    },
    "Admin": {
      "title": "Admin",
      "type": "object",
      "description": "Represents an admin user.",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address of the admin."
        }
      },
      "required": [
        "email"
      ]
    },
    "Settings": {
      "title": "Settings",
      "type": "object",
      "description": "Represents the publication settings.",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the publication."
        },
        "description": {
          "type": "string",
          "description": "A short description of the publication."
        }
      },
      "required": ["name", "description"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "/articles/{articleId}": {
      "schema": {
        "$ref": "#/entities/Article"
      },
      "description": "Stores all blog articles. Each document is an article."
    },
    "/categories/{categoryId}": {
      "schema": {
        "$ref": "#/entities/Category"
      },
      "description": "Stores article categories."
    },
    "/newsletter_subscribers/{subscriberId}": {
      "schema": {
        "$ref": "#/entities/NewsletterSubscriber"
      },
      "description": "Stores newsletter subscribers."
    },
    "/admins/{userId}": {
      "schema": {
        "$ref": "#/entities/Admin"
      },
      "description": "Stores admin users. The document ID is the user's UID."
    },
    "/settings/{settingsId}": {
        "schema": {
            "$ref": "#/entities/Settings"
        },
        "description": "Stores publication settings as a singleton document (e.g., ID 'main')."
    }
  }
}
